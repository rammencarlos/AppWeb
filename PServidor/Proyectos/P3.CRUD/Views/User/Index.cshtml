@using Utilities.Persistence;
@model List<UserViewModel>
@{

    ViewData["Title"] = "Lista de usuarios";
}
<h1>Lista de usuarios</h1>

<p style="text-align:right;margin:20px;">
    <a class="btn btn-outline-primary" asp-action="AddOrEdit">Nuevo Usuario</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label>Id</label>
                </th>
                <th>
                    <label>UserName</label>
                </th>
                <th>
                    <label>Name</label>
                </th>
                <th></th>
                <th>Editar</th>
                <th>Detalle</th>
                <th>Borrar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.UserName)

                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Name)
                    </td>
                    <td></td>
                    <td class="text-center">
                        <a asp-action="AddOrEdit" class="btn btn-outline-primary" asp-route-Id="@item.Id">Editar</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Detail" class="btn btn-outline-info" asp-route-Id="@item.Id">Detalle</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id="@item.Id">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
